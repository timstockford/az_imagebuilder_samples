{
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "apiVersion": "2019-05-01-preview",
    "location": "<region>",
    "dependsOn": [],
    "tags": {
        "imagebuilderTemplate": "windows2019"
            },

    "properties": {

        "buildTimeoutInMinutes" : 100,

        "vmProfile": 
                {
                "vmSize": "Standard_D4_v3",
                "osDiskSizeGB": 127
                },
        
        "source": {
            "type": "PlatformImage",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2019-Datacenter",
                "version": "latest"
            
        },
        "customize": [
            {
                "type": "PowerShell",
                "name": "CreateLocalBuildFolder",
                "runElevated": true,
                "inline": [
                    "$localbuildfolder = $env:SystemRoot\\aibBuild",
                    "New-Item -Path $localbuildfolder -ItemType directory"
                ]
            },
            {
                "type": "PowerShell",
                "name": "Install Chocolatey",
                "runElevated": true,
                "inline": [
                    "Set-ExecutionPolicy Bypass -Scope Process -Force",
                    "[System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072",
                    "iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'))"
                ]
            },
            {
                "type": "WindowsRestart",
                "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM Post Package Install  > c:\\windows\\aibBuild\\aibbuildlog.txt",
                "restartTimeout": "5m"
            },
                {
                    "type": "WindowsUpdate",
                    "searchCriteria": "IsInstalled=0",
                    "filters": [
                        "exclude:$_.Title -like '*Preview*'",
                        "include:$true"
                                ],
                    "updateLimit": 20
                }
        ],
        "distribute": 
            [
                {
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sigName>/images/<imageDefName>",
                    "runOutputName": "<runOutputName>",
                    "artifactTags": {
                        "imageSource": "azVmImageBuilder",
                        "baseosimg": "windows2019",
                        "aibTemplateSource": "<aibTemplatePath>",
                        "aibTemplateCreation": "<date>"
                    },
                    "replicationRegions": [
                        "<region>"
                    ]
                },
                { 
                    "type": "VHD",
                    "runOutputName": "<runOutputName>VHD",
                    "tags": {
                        "imageSource": "azVmImageBuilder",
                        "baseosimg": "windows2019",
                        "aibTemplateSource": "<aibTemplatePath>",
                        "aibTemplateCreation": "<date>"
                    }
                } 
                
            ]
        }
    }
